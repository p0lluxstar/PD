{
    "compilerOptions": {
      "target": "ES2018",
      "lib": ["ES6"],
      "module": "NodeNext",
      "rootDir": "./src",
      "resolveJsonModule": true,
      "allowJs": true,
      "sourceMap": true,
      "outDir": "./dist",
      "esModuleInterop": true,
      "forceConsistentCasingInFileNames": true,
      "strict": true,
      "noImplicitAny": true,
      "skipLibCheck": true
    },
    "ts-node": {
        "esm": true,
      },
    "include": ["src/**/*"],
    "exclude": ["node_modules"],
    "lib": ["esnext"]
  }